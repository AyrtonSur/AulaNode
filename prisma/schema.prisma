generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name String
  username  String
  email     String   @unique
  password  String

  @@map("users")
}

model Movie {
  id        String    @id @default(uuid())
  title     String
  imageURL  String
  synopse   String
  genre     String
  ageRating Int
  director  String
  sessions  Session[]

  @@map("movies")
}

model Session {
  id            String   @id @default(uuid())
  startTime     DateTime
  city          String
  neighboorhood String
  type          Int
  movieId       String
  movie         Movie    @relation(fields: [movieId], references: [id])
  seats         Seat[]

  @@map("sessions")
}

model Seat {
  id           String  @id @default(uuid())
  number       Int
  row          String
  price        Float
  occupierCPF  String
  occupierName String
  sessionId    String
  session      Session @relation(fields: [sessionId], references: [id])

  @@map("seats")
}
